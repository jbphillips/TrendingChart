@inherits LayoutComponentBase
@inject ISnackbar Snackbar

<MudDialogProvider />
<MudSnackbarProvider />
<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />

<PageTitle>TrendingChart</PageTitle>

<MudLayout>
    <MudAppBar Color="Color.Primary" Class="align-center justify-center">
        
        <MudItem>
            <MudText Typo="Typo.h5">Blazor DevExpress Line Chart Prototype</MudText>
            @*            Class="d-flex align-center justify-center mud-width-full py-8"*@
        </MudItem>
           
    </MudAppBar>
    <MudMainContent Class="py-0 my-0">
        <MudStack>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-0 mainContainer" Style="margin:0 auto;">
                @Body
            </MudContainer>

        </MudStack>
    </MudMainContent>
   
    <BottomAppBar />

</MudLayout>

@code {
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
}